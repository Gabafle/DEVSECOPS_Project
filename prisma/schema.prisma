// Schéma Prisma pour la base de données PostgreSQL
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modèle User pour l'authentification
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

// Table pour stocker les sessions (utilisée par connect-pg-simple)
model Session {
  sid    String   @id
  sess   Json
  expire DateTime

  @@index([expire])
  @@map("session")
}

