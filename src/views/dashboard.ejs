                <th>Adresse email</th>
                <th>Date d'inscription</th>
                <th style="width: 120px; text-align: center;">Statut</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user, index) => { %>
                <tr>
                  <td><strong style="color: var(--gray-700);"><%= index + 1 %></strong></td>
                  <td>
                    <strong><%= user.email %></strong>
                    <% if (user.email === currentUserEmail) { %>
                      <span class="badge badge-primary" style="margin-left: 0.5rem;">
                        Vous
                      </span>
                    <% } %>
                  </td>
                  <td style="color: var(--gray-700);">
                    <%= new Date(user.createdAt).toLocaleDateString('fr-FR', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit'
                    }) %>
                  </td>
